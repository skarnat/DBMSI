package columnar;

import global.AttrType;
import global.TID;
import heap.Heapfile;
import heap.Scan;
import heap.Tuple;

public class TupleScan {

	public Scan[] scan;
	public ColumnarFile cf;

	public TupleScan(ColumnarFile columnarfile) {

		int i = 0;
		this.cf = columnarfile;
		this.scan = new Scan[columnarfile.numberOfColumns];
		try {
			for (Heapfile hf: columnarfile.hfColumns) {
				scan[i] = hf.openScan();
				i++;
			}
		} catch (Exception e){
			e.printStackTrace();
		}

	}

	public void closetuplescan() {

		for(Scan s: scan)
			s.closescan();

		scan = null;

	}

	public Tuple getNext(TID tid) {

		Tuple nextTuple = new Tuple(cf.tupleLength);

		short[] fldOffset = new short[cf.getTupleCnt()];

		for (int i = 0, offset = 0; i <cf.numColumns ; i++) {

			if (cf.type[i].attrType == AttrType.attrInteger) {
				fldOffset[i] = (short) offset;
				offset = offset + 4;
			}
			if (cf.type[i].attrType == AttrType.attrString) {
				fldOffset[i] = (short) offset;
				offset = offset + cf.stringSize;
			}
		}

		try {

			nextTuple.setTupleMetaData(cf.tupleLength, (short)cf.numColumns, fldOffset);

			int i = 0;

			for (Scan hf: scan)
			{
				if (cf.type[i].attrType == AttrType.attrInteger)	{

					Tuple t = hf.getNext(tid.recordIDs[i]);
					if (t == null)
						return null;
					
					t.setTupleMetaData(4, (short)1, fldOffset);

					nextTuple.setIntFld(i+1, t.getIntFld(1));
				}
				if (cf.type[i].attrType == AttrType.attrString)	{
					Tuple t = hf.getNext(tid.recordIDs[i]);

					if(t == null)
						return null;
					
					t.setTupleMetaData(cf.stringSize, (short)1, fldOffset);
					
					nextTuple.setStrFld(i+1, t.getStrFld(1));
				}
				i++;
			}

		} catch (Exception e){
			e.printStackTrace();
		}

		return nextTuple;

	}

	public boolean position(TID tid) {
		int i = 0 ;
		try {
			for(Scan s: this.scan) {
				if(!s.position(tid.recordIDs[i]))
					i++;
				return false;
			}
			return true;
		} catch (Exception e){
			e.printStackTrace();
		}
		return false;

	}
}
